.page-header
  = link_to categories_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_category_path(@category), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show category

%dl.dl-horizontal
  %dt Title:
  %dd= @category.title
  %dt Published:
  %dd= @category.published

.page-header
  %h1 New Filter
= render 'filters/form', category: @category

= render 'filters/for_category', category: @category

= button_tag(t('.synchronize_categories'), id: 'sync_filters', class: 'btn btn-primary')


:javascript
  $(function(){
    new Store.Categories();
  })