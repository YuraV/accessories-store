#menu
  .panel.list-group
    - Category.scoped.each_with_index do |category, index|
      %a.list-group-item{"data-parent" => "#menu", "data-target" => "#item_#{category.id}", "data-toggle" => "collapse", :href => "#"}
        = category.title
        %span.label.label-info= category.filters.count
        %span.glyphicon.glyphicon-triangle-right.pull-right
      %div{ id: "item_#{ category.id }", class: "sublinks collapse" }
        - category.filters.each_with_index do |filter, index|
          %a.list-group-item.small
            %span.glyphicon.glyphicon-chevron-right
            = filter.name

