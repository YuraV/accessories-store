.form
  .fieldset
    = f.label :name
    = f.text_field :name
  .fieldset
    = f.label :description
    = f.text_area :description, rows: 3
  .fieldset
    = f.label :price
    = f.text_field :price
  .fieldset
    = f.label :currency
    = f.select :currency, ["USD","EUR", "UAH"]
  .fieldset
    = f.label :picture
    = f.file_field :picture

= f.submit
