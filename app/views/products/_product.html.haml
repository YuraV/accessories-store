.col-sm-6.col-md-4
  .thumbnail
    = image_tag product.picture.url(:medium) || default_picture, height: 240, width: 220
    -#%img{:alt => "100%x200", "data-holder-rendered" => "true", "data-src" => "holder.js/100%x200", :src => "data:image/svg+xml;base64,", :style => "height: 200px; width: 100%; display: block;"}/
    .caption
      %h3= product.title
      %p= product.description
      %p
        = link_to t('.show_product'), product_path(product), role: 'button'
        %a.btn.btn-default{:href => "#", :role => "button"}= t('.add_to_cart')
