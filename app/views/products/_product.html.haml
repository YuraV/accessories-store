.col-xs-6.col-md-4
  .thumbnail
    = image_tag product.picture.url(:medium) || default_picture
    .caption
      %h3= product.title
      %p= product.description
      %p
        %span price:
        %span.price= product.price
      %p
        = link_to t('.show_product'), product_path(product), class: 'btn btn-default', role: 'button'
        %a.btn.btn-primary{:href => "#", :role => "button"}= t('.add_to_cart')